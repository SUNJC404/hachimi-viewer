spring.application.name=hachimi-viewer
server.port=8080

# MySQL Database Connection Settings
spring.datasource.url=${SPRING_DATASOURCE_URL:jdbc:mysql://localhost:3306/video_db}
spring.datasource.username=${SPRING_DATASOURCE_USERNAME:root}
spring.datasource.password=${SPRING_DATASOURCE_PASSWORD:password}

spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

spring.datasource.hikari.auto-commit=false

# Meilisearch Settings
meili.host=${MEILI_HOST:http://localhost:7700}
meili.apiKey=Meili4752
meili.index.videos=videos

# Mybatis
mybatis-plus:
    configuration:
        # MyBatis ??
        map-underscore-to-camel-case: true
    global-config:
        # ????
        db-config:
            # ?????
            id-type: auto